{
  "name": "command-runner",
  "publisher": "Bhargav",
  "displayName": "Command Runner",
  "description": "Store and run custom command sequences step by step",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commandRunner.addSequence",
        "title": "Command Runner: Add New Sequence",
        "icon": "$(add)"
      },
      {
        "command": "commandRunner.runSequence",
        "title": "Command Runner: Run Sequence",
        "icon": "$(play)"
      },
      {
        "command": "commandRunner.editSequence",
        "title": "Command Runner: Edit Sequence",
        "icon": "$(edit)"
      },
      {
        "command": "commandRunner.deleteSequence",
        "title": "Command Runner: Delete Sequence",
        "icon": "$(trash)"
      },
      {
        "command": "commandRunner.runFromStep",
        "title": "Command Runner: Run From This Step",
        "icon": "$(debug-start)"
      },
      {
        "command": "commandRunner.copyStepCommand",
        "title": "Command Runner: Copy Step Command",
        "icon": "$(clippy)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commandRunner",
          "title": "Command Runner",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "commandRunner": [
        {
          "id": "commandSequences",
          "name": "Command Sequences"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "commandRunner.addSequence",
          "when": "view == commandSequences",
          "group": "navigation@1"
        },
        {
          "command": "commandRunner.editSequence",
          "when": "view == commandSequences",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "commandRunner.runSequence",
          "when": "view == commandSequences && viewItem == sequence",
          "group": "inline"
        },
        {
          "command": "commandRunner.editSequence",
          "when": "view == commandSequences && viewItem == sequence",
          "group": "navigation"
        },
        {
          "command": "commandRunner.deleteSequence",
          "when": "view == commandSequences && viewItem == sequence",
          "group": "navigation"
        },
        {
          "command": "commandRunner.runFromStep",
          "when": "view == commandSequences && viewItem == step",
          "group": "inline"
        },
        {
          "command": "commandRunner.copyStepCommand",
          "when": "view == commandSequences && viewItem == step",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
